<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
	<name>SellingHive</name>
	<description>
		This is SellingHive Application
	</description>

	<author email="sellinghive.com" href="http://sellinghive.com">
	   	SellingHive Team
	</author>

	<content src="index.html" />

	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="false" />
	<preference name="KeepRunning" value="false"/>
	<preference name="SplashScreen" value="screen"/>

	<preference name="android-minSdkVersion" value="14"  />
	<plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1" />
	<plugin spec="https://github.com/apache/cordova-plugin-contacts.git#51eb403" />
	
	<plugin name="cordova-plugin-background-mode" source="npm"/>
	<plugin spec="https://github.com/dukhanov/cordova-background-timer.git" source="git"/>
	<plugin spec="https://github.com/wnyc/cordova-plugin-sleeptimer.git" source="git"/>

	<plugin name="cordova-plugin-camera" spec="https://github.com/apache/cordova-plugin-camera">
	    <variable name="CAMERA_USAGE_DESCRIPTION" value="sellinghive need camera access to take pictures" />
	    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="sellinghive would like to access your photo library to let you select a profile picture." />
	</plugin>

	<edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
	    <string>sellinghive need camera access to take pictures</string>
	</edit-config>


	<plugin name="cordova-plugin-badge" spec="~0.7.0"/>

	
	<allow-navigation href="*" />
	<allow-navigation href="https://*youtube.com/*"/>
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<platform name="android">
		<allow-intent href="market:*" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>

